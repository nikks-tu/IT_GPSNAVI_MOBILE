<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techuva.vehicletracking.activity.LoginActivity"
    android:orientation="vertical"
    android:id="@+id/ll_root_login"
    android:layout_gravity="center">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="top"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:textSize="@dimen/activity_textSize_large_thirty_five"
                android:id="@+id/tv_gps"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navi"
                android:textSize="@dimen/activity_textSize_large_thirty_five"
                android:id="@+id/tv_navi"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:layout_marginStart="@dimen/large_view_margin"
            android:layout_marginEnd="@dimen/large_view_margin"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/three_side_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:padding="@dimen/elarge_view_margin"
                android:text="@string/customer_login_txt"
                android:textSize="@dimen/activity_textSize_small"
                android:textColor="@color/white"
                tools:targetApi="lollipop"
                android:id="@+id/tv_login_heading"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/view_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_five"
                        android:layout_marginTop="@dimen/margin_five"
                        android:layout_marginLeft="@dimen/view_margin"
                        android:layout_marginRight="@dimen/view_margin">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_userName"
                            app:srcCompat="@drawable/user"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/large_view_margin"
                            android:paddingBottom="@dimen/large_view_margin"
                            android:paddingLeft="@dimen/margin_five"
                            android:paddingRight="@dimen/margin_five"
                            android:contentDescription="@string/app_name"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/large_view_margin"
                            android:paddingBottom="@dimen/large_view_margin"
                            android:paddingLeft="@dimen/margin_five"
                            android:paddingRight="@dimen/margin_five"
                            android:hint="@string/email_id"
                            android:background="@null"
                            android:textColorHint="@color/text_color_table"
                            android:textColor="@color/text_color_light"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:id="@+id/edt_userName"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/view_margin"
                        android:layout_marginEnd="@dimen/view_margin"
                        android:background="@color/colorPrimaryTrans"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/view_margin"
                        android:layout_marginRight="@dimen/view_margin"
                        android:layout_marginBottom="@dimen/margin_five"
                        android:layout_marginTop="@dimen/margin_five">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_password"
                            app:srcCompat="@drawable/password"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/large_view_margin"
                            android:paddingBottom="@dimen/large_view_margin"
                            android:paddingLeft="@dimen/margin_five"
                            android:paddingRight="@dimen/margin_five"
                            android:contentDescription="@string/app_name"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/large_view_margin"
                            android:paddingBottom="@dimen/large_view_margin"
                            android:paddingLeft="@dimen/margin_five"
                            android:paddingRight="@dimen/margin_five"
                            android:hint="@string/password"
                            android:background="@null"
                            android:textColorHint="@color/text_color_table"
                            android:textColor="@color/text_color_light"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:id="@+id/edt_userPassword"
                            tools:targetApi="o" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/view_margin"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:background="@color/colorPrimaryTrans"
                    android:layout_marginBottom="@dimen/margin_five"/>

                <LinearLayout
                    android:id="@+id/ll_button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/large_view_margin"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin"
                    android:paddingTop="@dimen/view_margin"
                    android:paddingBottom="@dimen/view_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:textColor="@color/white"
                        android:id="@+id/tv_login_btn"
                        android:textSize="@dimen/activity_textSize_extra_small"
                        android:text="@string/login"
                        android:padding="@dimen/margin_five"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_layout_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_marginEnd="@dimen/view_margin"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/view_margin"
                android:layout_marginBottom="@dimen/margin_five"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:paddingStart="@dimen/margin_two"
                    android:paddingEnd="@dimen/margin_two"
                    android:text="@string/forgot_password_txt"
                    android:id="@+id/tv_forgot"
                    android:textColor="@color/text_color_light"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:id="@+id/tv_forgotPassword"
                    android:text="@string/click_here_forgot_password"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_text_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_marginEnd="@dimen/view_margin"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x_large_view_margin"
                android:layout_marginBottom="@dimen/margin_two"
                android:paddingTop="@dimen/view_margin"
                android:paddingBottom="@dimen/margin_five"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:id="@+id/tv_dont_have_account"
                    android:text="@string/no_account"
                    android:layout_margin="@dimen/margin_one"
                    android:textColor="@color/text_color_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:id="@+id/tv_sign_up"
                    android:text="@string/sign_up"
                    android:layout_margin="@dimen/margin_one"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="@dimen/elarge_view_margin"
        android:layout_marginBottom="@dimen/large_view_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:textSize="@dimen/activity_textSize_x_large"
            android:id="@+id/tv_from"
            android:textColor="@color/dark_gray_op"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech"
                android:textSize="@dimen/activity_navigation_large"
                android:id="@+id/tv_tech"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uva"
                android:textSize="@dimen/activity_navigation_large"
                android:id="@+id/tv_uva"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>

</LinearLayout>