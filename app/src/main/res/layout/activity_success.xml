<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccessActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/activity_textSize_x_large"/>
            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/large_image_height_width">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_margin="@dimen/view_margin">
           <ImageView
               android:layout_width="@dimen/large_image_height_width"
               android:layout_height="@dimen/large_image_height_width"
               android:src="@drawable/success"
               android:layout_gravity="center"
               android:id="@+id/iv_success"/>
           <ImageView
               android:layout_width="@dimen/large_image_height_width"
               android:layout_height="@dimen/large_image_height_width"
               android:src="@drawable/failed"
               android:layout_gravity="center"
               android:id="@+id/iv_failed"
               android:visibility="gone"/>
       </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hurrah"
            android:id="@+id/tv_hurrah"
            android:textSize="@dimen/activity_navigation_large"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/margin_three"
            android:textColor="@color/text_color_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_text_one"
            android:text="@string/your_password_reset_link"
            android:textSize="@dimen/activity_textSize_x_large"
            android:gravity="center"
            android:layout_marginTop="@dimen/view_margin"
            android:textColor="@color/text_color_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_text_two"
            android:text="@string/is_sent_to_email_id"
            android:textSize="@dimen/activity_textSize_x_large"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_five"
            android:textColor="@color/text_color_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_back_to_login"
            android:text="@string/back_to_login"
            android:textSize="@dimen/activity_textSize_large"
            android:gravity="center"
            android:layout_marginTop="@dimen/elarge_view_margin"
            android:textColor="@color/bug_red"/>
    </LinearLayout>

</LinearLayout>