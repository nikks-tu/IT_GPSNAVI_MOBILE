<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MonthHistoryActivity"
    android:orientation="vertical"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/activity_textSize_large"/>
            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end|center"
                android:id="@+id/cv_year"
                android:layout_marginTop="@dimen/view_margin"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:elevation="@dimen/margin_two"
                app:cardElevation="10dp"
                tools:targetApi="lollipop"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_five"
                    android:layout_marginTop="@dimen/margin_five"
                    android:layout_marginRight="@dimen/margin_five"
                    android:layout_marginBottom="@dimen/margin_five"
                    android:background="@drawable/button_background_whi"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/activity_textSize_large" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           app:srcCompat="@drawable/back_arrow"
           android:layout_gravity="center"
           android:id="@+id/iv_back_month"
           android:layout_marginTop="@dimen/view_margin"
           android:layout_marginBottom="@dimen/view_margin"/>
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:id="@+id/rcv_months"
           android:layout_weight="1"
           android:layout_marginTop="@dimen/margin_five"
           android:layout_marginBottom="@dimen/margin_five"
           android:background="@color/white"
           android:padding="@dimen/margin_two"/>

       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           app:srcCompat="@drawable/forward"
           android:layout_gravity="center"
           android:id="@+id/iv_next_month"
           android:layout_marginTop="@dimen/view_margin"
           android:layout_marginBottom="@dimen/view_margin"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/ll_data"
       android:visibility="gone">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="@dimen/view_margin"
           android:layout_marginLeft="@dimen/view_margin"
           android:id="@+id/tv_total_distance"
           android:background="@color/colorPrimary"
           android:textColor="@color/white"
           android:textSize="@dimen/activity_textSize_small"
           android:gravity="center"
           android:paddingTop="@dimen/view_margin"
           android:paddingBottom="@dimen/view_margin"/>
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/rcv_values"
           android:background="#F7F7F7"
           android:layout_marginTop="@dimen/view_margin"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_data_not_found"
        android:text="@string/no_data_found"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/activity_textSize_large"
        android:visibility="visible"
        android:textColor="@color/dark_gray"
        android:background="#F7F7F7"/>

</LinearLayout>