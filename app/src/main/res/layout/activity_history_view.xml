<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.History_View_Activity"
    android:id="@+id/ll_root_day_view"
    android:background="@color/white"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/activity_textSize_large"/>
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_main"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/view_margin"
            android:baselineAligned="false"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/margin_five"
            android:id="@+id/ll_day_view">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_select_date"
                    android:padding="@dimen/margin_two">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/text_color_dark"
                        android:layout_weight="0.1"
                        app:srcCompat="@drawable/back_arrow"
                        android:contentDescription="@string/app_name"
                        android:id="@+id/iv_to_date"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date_txt"
                        android:textSize="@dimen/activity_textSize_small"
                        android:layout_weight="1"
                        android:id="@+id/tv_from_date"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/dark_gray"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginTop="@dimen/margin_five"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:padding="@dimen/margin_two"
                    android:id="@+id/ll_to_date">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/text_color_dark"
                        android:layout_weight="0.1"
                        app:srcCompat="@drawable/forward"
                        android:contentDescription="@string/app_name"
                        android:id="@+id/iv_from_date"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date_txt"
                        android:textSize="@dimen/activity_textSize_small"
                        android:layout_weight="0.9"
                        android:id="@+id/tv_to_date"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/dark_gray"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginTop="@dimen/margin_five"/>

            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_day_view"
            android:id="@+id/rcv_channel_names"
            android:orientation="horizontal"
            android:visibility="gone"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabs"
            app:tabMinWidth="100dp"
            android:scrollbars="horizontal"
            app:tabMode="scrollable"
            android:visibility="gone"
            app:tabIndicatorColor="@color/dark_blue">
            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jcsnsdjkcnsdjkcd"/>-->
        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_headings"
            android:layout_below="@+id/tabs"
            android:background="@color/colorPrimary"
            android:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/date_txt"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/tv_date_heading"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/received_at"
                android:textSize="@dimen/activity_textSize_small_16"
                android:id="@+id/tv_time_heading"
                android:textColor="@color/white"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Meter \nReading(Kms)"
                android:padding="@dimen/margin_five"
                android:gravity="center"
                android:textSize="@dimen/activity_textSize_small_16"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tv_meter_reading"
                />


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Distance \n(Kms)"
                android:padding="@dimen/margin_five"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/activity_textSize_small_16"
                android:id="@+id/tv_value_heading"
                />

            <TextView
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Location \n Lat/Long"
                android:padding="@dimen/margin_five"
                android:textSize="@dimen/activity_textSize_small_16"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_location"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/view_background"
            android:layout_below="@+id/ll_headings"
            android:id="@+id/view_headings"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_data"
            android:visibility="visible"
            android:layout_below="@+id/view_headings"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/rcv_day_data"
            android:layout_below="@+id/view_headings"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_headings"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/ll_tab_data_not_found">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_not_found"
                android:gravity="center"
                android:id="@+id/tv_data_not_found"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/activity_textSize_small"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/large_view_margin"
                android:id="@+id/btn_retry"
                android:background="@color/dark_blue"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/ll_no_internet">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_internet_connection"
            android:id="@+id/tv_no_internet"
            android:textSize="@dimen/activity_textSize_x_large"
            android:gravity="center"
            android:layout_margin="@dimen/margin_five"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:textColor="@color/white"
            android:id="@+id/tv_retry"
            android:background="@drawable/button_background_popup"
            android:paddingLeft="@dimen/view_margin_medium"
            android:paddingRight="@dimen/view_margin_medium"
            android:paddingTop="@dimen/margin_five"
            android:paddingBottom="@dimen/margin_five"
            android:textSize="@dimen/activity_textSize_small"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_five"/>
    </LinearLayout>
</LinearLayout>