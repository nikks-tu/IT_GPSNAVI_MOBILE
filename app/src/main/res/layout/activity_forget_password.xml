<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetPasswordActivity"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/ll_root_view_forgot">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/large_view_margin"
            android:layout_marginBottom="@dimen/large_view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:textSize="@dimen/activity_textSize_large_thirty_five"
                android:id="@+id/tv_gps"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navi"
                android:textSize="@dimen/activity_textSize_large_thirty_five"
                android:id="@+id/tv_navi"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:padding="@dimen/elarge_view_margin"
                android:text="@string/forgot_password"
                android:textSize="@dimen/activity_textSize_small"
                android:textColor="@color/white"
                tools:targetApi="lollipop"
                android:id="@+id/tv_forgot_heading"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/three_side_border"
                android:padding="@dimen/margin_five">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/large_view_margin"
                    android:layout_marginRight="@dimen/large_view_margin"
                    android:layout_marginBottom="@dimen/margin_five">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_userNameforgot"
                        app:srcCompat="@drawable/user"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:paddingLeft="@dimen/margin_five"
                        android:paddingRight="@dimen/margin_five"
                        android:contentDescription="@string/app_name"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:paddingLeft="@dimen/margin_five"
                        android:paddingRight="@dimen/margin_five"
                        android:hint="@string/email_id"
                        android:background="@null"
                        android:textColorHint="@color/text_color_light"
                        android:textColor="@color/text_color_light"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:id="@+id/edt_username_forgot"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/large_view_margin"
                    android:layout_marginRight="@dimen/large_view_margin"
                    android:paddingTop="@dimen/large_view_margin"
                    android:paddingBottom="@dimen/large_view_margin"
                    android:layout_marginBottom="@dimen/small_image_view">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/activity_textSize_small"
                        android:text="@string/submit"
                        android:padding="@dimen/margin_five"
                        android:id="@+id/tv_submit"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_view_margin"
                    android:layout_marginEnd="@dimen/large_view_margin"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/activity_textSize_extra_small"
                        android:id="@+id/tv_already_have_account"
                        android:paddingStart="@dimen/view_margin"
                        android:paddingEnd="@dimen/margin_two"
                        android:paddingTop="@dimen/view_margin"
                        android:paddingBottom="@dimen/view_margin"
                        android:text="@string/sign_in"
                        android:textColor="@color/text_color_light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/activity_textSize_extra_small"
                        android:id="@+id/tv_forgotPassword"
                        android:paddingStart="@dimen/margin_two"
                        android:paddingEnd="@dimen/margin_two"
                        android:paddingTop="@dimen/view_margin"
                        android:paddingBottom="@dimen/view_margin"
                        android:text="@string/login_"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="@dimen/elarge_view_margin"
            android:layout_marginBottom="@dimen/large_view_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from"
                android:textSize="@dimen/activity_textSize_x_large"
                android:id="@+id/tv_from"
                android:textColor="@color/dark_gray_op"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech"
                    android:textSize="@dimen/activity_navigation_large"
                    android:id="@+id/tv_tech"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="uva"
                    android:textSize="@dimen/activity_navigation_large"
                    android:id="@+id/tv_uva"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>