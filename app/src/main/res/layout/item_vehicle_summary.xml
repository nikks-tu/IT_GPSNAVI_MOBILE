<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="@dimen/margin_five"
    android:gravity="center"
    android:layout_marginLeft="@dimen/margin_five"
    android:layout_marginRight="@dimen/margin_five"
    android:layout_marginTop="@dimen/margin_three"
    android:layout_marginBottom="@dimen/margin_three"
    tools:targetApi="lollipop"
    android:translationZ="@dimen/margin_five">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/margin_five"
        android:paddingBottom="@dimen/margin_five">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_date"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="@dimen/margin_two"
            android:paddingBottom="@dimen/margin_two">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_textSize_x_large"
                android:padding="@dimen/margin_two"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_month"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_textSize_small_16"
                android:padding="@dimen/margin_two"
                android:textAllCaps="true"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/view_margin"
            android:layout_height="@dimen/x_large_view_margin"
            app:srcCompat="@drawable/triangle"
            android:tint="@color/white"
            android:rotation="180"
            android:layout_gravity="end|center"
            android:contentDescription="@string/app_name"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:id="@+id/ll_main_bubble"
        android:background="#F7F7F7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_data"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_distance_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_small"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_distance_txt"
                    android:text="@string/distance_travelled"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
