<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparency"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="@dimen/margin_five"
    android:layout_margin="@dimen/view_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/view_margin_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirmation"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="@dimen/activity_textSize_x_large"
                android:padding="@dimen/margin_two"
                android:id="@+id/tv_heading"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_alertText"
                android:textAlignment="center"
                android:textColor="@color/text_color_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/large_view_margin"
                android:layout_marginTop="@dimen/margin_five">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_num"
                    android:textSize="@dimen/activity_textSize_small_16"
                    android:id="@+id/tv_vehicle_num_text"
                    android:textColor="@color/text_color_light"
                    android:layout_margin="@dimen/margin_five"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_num"
                    android:textSize="@dimen/activity_textSize_small_16"
                    android:textColor="@color/text_color_light"
                    android:id="@+id/tv_vehicle_num"
                    android:layout_margin="@dimen/margin_five"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/large_view_margin"
                android:layout_marginTop="@dimen/margin_five">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_name_"
                    android:textSize="@dimen/activity_textSize_small_16"
                    android:id="@+id/tv_driver_name_text"
                    android:textColor="@color/text_color_light"
                    android:layout_margin="@dimen/margin_five"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_num"
                    android:textSize="@dimen/activity_textSize_small_16"
                    android:textColor="@color/text_color_light"
                    android:id="@+id/tv_driver_name"
                    android:layout_margin="@dimen/margin_five"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_remarks"
                android:hint="@string/remarks"
                android:textSize="@dimen/activity_textSize_small"
                android:layout_margin="@dimen/margin_five"
                android:textColor="@color/text_color_light"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2.5"
                android:layout_gravity="end"
                android:gravity="end">

                <TextView
                    android:id="@+id/button_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/large_view_margin"
                    android:layout_marginBottom="@dimen/view_margin"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/margin_five"
                    android:layout_marginRight="@dimen/margin_five"
                    android:padding="@dimen/view_margin"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_small"/>
                <TextView
                    android:id="@+id/button_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/large_view_margin"
                    android:text="@string/deallocate"
                    android:layout_marginBottom="@dimen/view_margin"
                    android:padding="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/margin_five"
                    android:layout_marginRight="@dimen/margin_five"
                    android:background="@drawable/button_background_popup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_textSize_small"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>